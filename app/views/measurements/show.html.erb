<%- model_class = Measurement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:temperature) %>:</strong></dt>
  <dd><%= @measurement.temperature %></dd>
  <dt><strong><%= model_class.human_attribute_name(:humidity) %>:</strong></dt>
  <dd><%= @measurement.humidity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lightLevel) %>:</strong></dt>
  <dd><%= @measurement.lightLevel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:device_id) %>:</strong></dt>
  <dd><%= @measurement.device_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              measurements_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_measurement_path(@measurement), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              measurement_path(@measurement),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
